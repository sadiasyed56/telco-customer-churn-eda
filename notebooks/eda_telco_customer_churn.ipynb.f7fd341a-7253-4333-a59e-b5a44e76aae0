# Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load CSV
df = pd.read_csv('../data/Telco-Customer-Churn.csv')

# Quick look at data
print(df.head())
print(df.info())
print(df.describe())

# Check missing values
print(df.isnull().sum())

# Count churn
sns.countplot(data=df, x='Churn')
plt.savefig('../visuals/churn_count.png')  # save visualization
plt.show()

# Example: MonthlyCharges distribution
sns.histplot(df['MonthlyCharges'], kde=True)
plt.savefig('../visuals/monthlycharges_hist.png')
plt.show()
